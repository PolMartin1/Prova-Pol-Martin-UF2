<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.prova_pol_martin.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/fotoBtn"
            android:text="Foto petita"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

        <Button
            android:id="@+id/androidBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/yellow_selector"/>

        <Button
            android:id="@+id/soBtn"
            android:layout_width="wrap_content"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="So" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/scroll1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@android:color/holo_green_light"            >
            <LinearLayout
                android:id="@+id/greenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/scroll"
            android:background="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            >

            <LinearLayout
                android:id="@+id/orangeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://archive.org/download/Q2_COMEDYCARTOON/popcorn.mp3"/>

        <Button
            android:layout_weight="0"
            android:id="@+id/textBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Text" />

    </LinearLayout>


</LinearLayout>